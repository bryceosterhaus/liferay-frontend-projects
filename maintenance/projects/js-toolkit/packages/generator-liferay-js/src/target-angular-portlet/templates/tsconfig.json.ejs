{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"inlineSources": true,
		"lib": ["ES2022", "dom"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noStrictGenericChecks": true,
		"outDir": "build",
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true,
		"target": "ES2022",
		"typeRoots": ["./node_modules/@types/"]
	},
	"include": ["./src/**/*.ts"]
}
